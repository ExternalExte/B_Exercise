REFINEMENT
  DirectedGraph_r
REFINES
  DirectedGraph
VARIABLES
  CEdge
INVARIANT
  CEdge: NODE --> POW(NODE) &
  !(n1, n2).(n1: NODE & n2: NODE => ((n1 |-> n2: Edge) => (n2: CEdge(n1)))) &
  !(n1, n2).(n1: NODE & n2: NODE => ((n2: CEdge(n1)) => (n1 |-> n2: Edge)))
INITIALISATION
  CEdge := NODE*{{}}
OPERATIONS
  add_edge(n1, n2) =
      CEdge := CEdge <+ {n1 |-> (CEdge(n1) \/ {n2})}
END
